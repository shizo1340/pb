Options -Indexes

<IfModule mod_authz_core.c>


  <FilesMatch "^(pv|r)\.php$">
    Require all granted
  </FilesMatch>


  <FilesMatch "^(?!pv\.php$|r\.php$).*\.php$">
    Require all denied
  </FilesMatch>

</IfModule>


<FilesMatch "^(config\.php|config\.local\.php|lib\.php)$">
  Require all denied
</FilesMatch>
